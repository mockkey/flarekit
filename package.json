{
  "name": "flarekit",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "pnpm -F @flarekit/frontend dev",
    "build": "pnpm -F @flarekit/frontend build",
    "deploy": "pnpm build:frontend &&  pnpm run -F @flarekit/frontend deploy",
    "db:generate": "pnpm -F @flarekit/frontend db:generate",
    "db:local": "pnpm -F @flarekit/frontend db:local",
    "db:remote": "pnpm -F @flarekit/frontend db:remote",
    "format": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check --fix ."
  },
  "dependencies": {
    "@flarekit/frontend": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4"
  },
  "packageManager": "pnpm@10.5.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
